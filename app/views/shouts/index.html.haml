#banner
  = image_tag 'banner.jpg'
  %h1
    shout at an idiot,
    %br
    about a thing
%h2.bottom-heading Popular

%ul#popular-topics
  / start the loop here
  - @topics.each do |topic|
    %li
      .top
        %p= topic.title
        - if topic.debater_count.round > 0
          %span.debater-count= topic.debater_count.round
        - if topic.observer_count.round > 0
          %span.observer-count= topic.observer_count.round
        .button shout about it!
      .pulldown
        = link_to 'YES!', show_room_path(topic, 'agree'), class: 'yes'
        = link_to 'NO!', show_room_path(topic, 'disagree'), class: 'no'
        = link_to 'observe', show_room_path(topic, 'observe'), class: 'observe'

%h2.bottom-heading Create a Topic
#create-topic
  = form_tag new_topic_path do
    = text_field_tag :topic
    = submit_tag

%ul#all-topics
  / start the loop here
  - @all.each do |topic|
    %li
      .top
        %p= topic.title
        %p= 'Debater Count: ' + topic.debater_count.to_s + ' Observer Count: ' + topic.observer_count.to_s
        .button shout about it!
      .pulldown
        = link_to 'YES!', show_room_path(topic, 'agree'), class: 'yes'
        = link_to 'NO!', show_room_path(topic, 'disagree'), class: 'no'
        = link_to 'observe', show_room_path(topic, 'observe'), class: 'observe'